<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.quicksorta.pingsafe.FriendPing"
    android:id="@+id/friendsPingView"
    android:background="#fc5bbfe4">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="NEEDS HELP"
        android:id="@+id/textView10"
        android:layout_marginTop="37dp"
        android:textColor="#FFFFFF"
        android:textSize="25dp"
        android:layout_toEndOf="@+id/latOut"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/latOut"
        android:layout_alignStart="@+id/latOut" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UNAVAILABLE"
        android:id="@+id/button7"
        android:onClick="helpUnconfirmed"
        android:layout_alignTop="@+id/button6"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ON MY WAY"
        android:id="@+id/button6"
        android:onClick="helpConfirmed"
        android:layout_toStartOf="@+id/textView11"
        android:layout_above="@+id/textView11"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="42dp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Friend Location:"
        android:id="@+id/textView11"
        android:textSize="20dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Latitude:"
        android:id="@+id/textView12"
        android:layout_below="@+id/textView11"
        android:layout_alignRight="@+id/button6"
        android:layout_alignEnd="@+id/button6"
        android:layout_marginTop="33dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Longitude:"
        android:id="@+id/textView13"
        android:layout_marginTop="37dp"
        android:layout_below="@+id/textView12"
        android:layout_alignLeft="@+id/textView12"
        android:layout_alignStart="@+id/textView12" />

    <requestFocus
        android:layout_below="@+id/textView13"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/latOut"
        android:layout_above="@+id/textView13"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/longOut"
        android:layout_toEndOf="@+id/textView13"
        android:layout_alignTop="@+id/textView13"
        android:layout_alignLeft="@+id/latOut"
        android:layout_alignStart="@+id/latOut" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/friendName"
        android:id="@+id/pingerName"
        android:textSize="25dp"
        android:textColor="#ffffff"
        android:layout_toStartOf="@+id/latOut"
        android:layout_alignTop="@+id/textView10"
        android:layout_alignRight="@+id/textView13"
        android:layout_alignEnd="@+id/textView13" />


</RelativeLayout>
